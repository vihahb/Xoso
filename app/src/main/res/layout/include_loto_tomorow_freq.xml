<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_16"
    android:background="@drawable/bolder_table"
    android:orientation="vertical"
    tools:context="com.xproject.xoso.xoso.view.activity.SpecialTomorowInfoActivity">

    <TextView
        android:id="@+id/tv_title_loto_special_freq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:text="Thống kê tần suất lô tô đặc biệt sau khi giải đặc biệt xuất hiện"
        android:textColor="@color/black_75"
        android:textSize="@dimen/size_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:minHeight="@dimen/size_36"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Bộ số"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Số lần"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Bộ số"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Số lần"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Bộ số"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_36"
            android:layout_weight="1"
            android:background="@drawable/bolder_table"
            android:gravity="center"
            android:text="Số lần"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/size_36"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bolder_table" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl_number_freq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </FrameLayout>

</LinearLayout>