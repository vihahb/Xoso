<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <FrameLayout
        android:background="@color/black_40"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_36"
            android:background="@drawable/layout_round"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_24"
            android:paddingTop="@dimen/size_24">

            <ProgressBar
                android:id="@+id/progressView"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="@dimen/size_36"
                android:layout_height="@dimen/size_36"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/cirle_progress_background"
                android:progressDrawable="@drawable/circular_progressbar"
                android:indeterminate="true"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="@dimen/size_24"
                android:paddingRight="@dimen/size_24"
                android:text="@string/loading"
                android:textColor="@color/black_75"
                android:textSize="@dimen/font_13" />


            <!--<ProgressBar-->
            <!--android:id="@+id/dialog_progress_progressview"-->
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <!--android:layout_width="@dimen/size_48"-->
            <!--android:layout_height="@dimen/size_48"-->
            <!--android:layout_below="@+id/dialog.progress.txt_title"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginLeft="@dimen/size_24"-->
            <!--android:layout_marginStart="@dimen/size_24"-->
            <!--android:layout_marginTop="@dimen/size_24"-->
            <!--android:maxHeight="@dimen/size_2"-->
            <!--android:minHeight="@dimen/size_2"-->
            <!--android:progressDrawable="@drawable/circular_progressbar" />-->
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
