<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_60"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:progress="10"
            android:progressDrawable="@drawable/progress_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_48"
        android:gravity="center"
        android:text="Chưa có kết quả"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_18" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_south"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_8"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ln_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_mute"
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:padding="@dimen/size_4"
                    android:src="@mipmap/ic_mute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Kết quả xổ số miền Nam"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black_40" />

                    <TextView
                        android:id="@+id/tv_not_yet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chưa mở thưởng"
                        android:textColor="@color/black_55" />
                </LinearLayout>
            </LinearLayout>


            <!-- Linear Table -->
            <include layout="@layout/south_table" />


            <TextView
                android:id="@+id/tv_loto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginTop="@dimen/size_16"
                android:gravity="center"
                android:text="Lô trực tiếp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <include layout="@layout/south_loto" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>