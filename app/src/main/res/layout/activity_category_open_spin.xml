<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xproject.xoso.xoso.view.activity.CategoryOpenSpinActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lịch quay thưởng"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_20" />


            <LinearLayout
                android:background="@drawable/bolder_table"
                android:id="@+id/lntitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="@dimen/size_36"
                android:weightSum="4">

                <TextView
                    android:background="@drawable/bolder_table"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="top|center_horizontal"
                    android:text="Thứ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16"
                    android:padding="@dimen/size_4"/>
                <TextView
                    android:id="@+id/title_north"
                    android:padding="@dimen/size_4"
                    android:background="@drawable/bolder_table"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="top|center_horizontal"
                    android:text="Miền Bắc (18:05)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/title_central"
                    android:padding="@dimen/size_4"
                    android:background="@drawable/bolder_table"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="top|center_horizontal"
                    android:text="Miền Trung (17:05)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/title_south"
                    android:padding="@dimen/size_4"
                    android:background="@drawable/bolder_table"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="top|center_horizontal"
                    android:text="Miền Nam (16:05)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl_open_spin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
