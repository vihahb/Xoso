<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_16"
    android:background="@drawable/bolder_table"
    tools:context="com.xproject.xoso.xoso.view.activity.SpecialTomorowInfoActivity">

    <TextView
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:id="@+id/tv_title_special_all_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/black_75"
        android:textSize="@dimen/size_16"
        android:textStyle="bold"
        android:text="Các giải đặc biệt ngày 11-10 hàng năm"/>

    <LinearLayout
        android:layout_marginTop="@dimen/size_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/size_36"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:background="@drawable/bolder_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:textColor="@color/black_75"
            android:text="Ngày" />

        <TextView
            android:padding="@dimen/size_2"
            android:background="@drawable/bolder_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:textColor="@color/black_75"
            android:text="Giải đặc biệt" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/rcl_special_all_year"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>